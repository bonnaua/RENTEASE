<div id="form-container-rentease">
  <div class="row">
    <h4>AJOUTER UN BIEN</h4>
  </div>
  <br>
  <%= simple_form_for(@housing) do |f| %>
    <div class="form-inputs">
      <div class="row">
        <div class= "col-half">
          <%= f.input :name, label: false, placeholder: "Nom du bien" %>
        </div>
        <div class= "col-half">
          <div>
            <%= f.select :category, ["Appartement", "Maison", "Loft", "Atelier", "Duplex", "Chambre"], label: false, placeholder: "Catégorie" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-half">
          <h4>Adresse</h4>
          <%= f.input :address, label: false, placeholder: "28 rue Jeanne Maillotte 59800 Lille" %>
        </div>
        <div class="col-half">
          <h4>Description</h4>
          <%= f.input :description, label: false, placeholder: "Cour intérieure, maison rénovée, a proximité du centre ville" %>
        </div>
        <br>
        <br>
      </div>
      <div class="row">
        <div class= "col-half">
          <h4>Nombre de pièces</h4>
          <%= f.input :nb_rooms, label: false, placeholder: "4" %>
        </div>
        <div class= "col-half">
          <div>
            <h4>Surface</h4>
            <%= f.input :surface, label: false, placeholder: "90" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class= "col-half">
          <div>
              <h4>Statut</h4>
             <%= f.select :status, ["Loué", "Disponible", "Indisponible"] %>
          </div>
        </div>
        <div class= "col-half">
          <h4>Photo du bien</h4>
          <%= f.input :photo, as: :file, label: false %>
        </div>
      </div>
      <hr size="1" width="100%" color="#DAF552">
    </div>
    <div class="row button-form">
      <div class="btn-signup-form">
        <%= f.button :submit, "Continuer et ajouter un contrat"%>
      </div>
      </div>
    <div class="row button-form">
      <button class="btn-form">Sauvegarder et retourner sur mon bien</button>
    </div>
  <% end %>
</div>
<br>
