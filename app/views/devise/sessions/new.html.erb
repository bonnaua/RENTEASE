<div class="container " id="form-container">

  <div class="left-side-form ">
    <h2>Content de vous revoir <%= @user.first_name %> ðŸ‘‹</h2>
    <div class="field-container">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Forgot your password?", new_password_path(resource_name), class: "forgot-pass" %><br />
        <% end %>
        <br>
        <br>
        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "btn-ghost btn-devise-form btn-submit" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="right-side-form " style="background-image: linear-gradient(rgba(0,0,0,0.1),rgba(0,0,0,0.1)),url(https://images.unsplash.com/photo-1543071293-d91175a68672?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=750&q=80);">
    <div class="field-container">
      <div class="text-for-signing">
        <h2>Nouveau ?</h2>
        <p>CrÃ©ez un compte et amÃ©liorez votre gestion immo! </p>
      </div>
      <div class="sign-up-btn-container">
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "Sign Up", new_registration_path(resource_name), class: "btn-signup-form-flash-version btn-submit"%><br />
        <% end %>
      </div>
    </div>
  </div>
</div>
