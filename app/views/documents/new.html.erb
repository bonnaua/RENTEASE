<div id="form-container-rentease">
  <div class="row">
    <h4>AJOUTER UN DOCUMENT</h4>
  </div>
  <br>
  <%= simple_form_for([@housing, @document]) do |f| %>
    <div class="form-inputs">
      <div class="row">
        <div class= "col-half">
          <h4>Nom du document *</h4>
          <%= f.input :name, label: false, placeholder: "Ex: Assur hab J. Maillotte" %>
        </div>
        <div class= "col-half">
          <div>
            <h4>Catégorie *</h4>
            <%= f.select :category, ["Quittance de loyer", "Assurance habitation", "Contrat d'habitation"], label: false, placeholder: "Catégorie" %>
          </div>
        </div>
    </div>
    <br>
    <h4>Télécharger le document *</h4>
    <%= f.input :pages, as: :file, label: false %>
    <hr size="1" width="100%" color="#DAF552">
    </div>
    <div class="row button-form">
      <div class="btn-signup-form btn-submit">
        <%= f.button :submit, "Ajouter et retourner sur mon bien"%>
      </div>
    </div>
  <% end %>
</div>
